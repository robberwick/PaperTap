<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Display Settings -->
    <PreferenceCategory
        android:title="Display Settings"
        android:iconSpaceReserved="false">

        <SeekBarPreference
            android:key="Qr_Padding"
            android:title="Edge Padding"
            android:summary="White border around image to compensate for display edge variations (pixels)"
            android:defaultValue="5"
            android:max="50"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1"
            android:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:key="Show_Ticket_Reference"
            android:title="Show Ticket Reference"
            android:summary="Display the ticket reference number below the QR code (e.g., TRG7JF3BVVN)"
            android:defaultValue="false"
            android:iconSpaceReserved="false" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
