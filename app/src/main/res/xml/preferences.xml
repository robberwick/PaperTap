<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Display Settings -->
    <PreferenceCategory
        android:title="Display Settings"
        android:iconSpaceReserved="false">

        <SeekBarPreference
            android:key="Qr_Padding"
            android:title="Edge Padding"
            android:summary="White border around image to compensate for display edge variations (pixels)"
            android:defaultValue="5"
            android:max="50"
            app:showSeekBarValue="true"
            app:seekBarIncrement="1"
            android:iconSpaceReserved="false" />

    </PreferenceCategory>

    <!-- NFC Image Information -->
    <PreferenceCategory
        android:title="NFC Image Information"
        android:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            android:key="Show_Station_Codes_On_Barcode"
            android:title="Show Station Codes"
            android:summary="Display origin â†’ destination station codes on the NFC image"
            android:defaultValue="false"
            android:iconSpaceReserved="false" />

        <SwitchPreferenceCompat
            android:key="Show_Travel_Date_On_Barcode"
            android:title="Show Travel Date"
            android:summary="Display the travel date on the NFC image"
            android:defaultValue="false"
            android:iconSpaceReserved="false" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
