<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:logo="@drawable/papertap_logotype"
            app:logoAdjustViewBounds="true"
            app:titleTextColor="?attr/colorOnPrimary"
            android:theme="@style/ToolbarTheme"
            app:popupTheme="@style/PopupMenuTheme" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="?attr/android:colorBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <!-- Welcome card - shown when no previous image exists -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/welcomeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_title"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/welcome_message"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:lineSpacingMultiplier="1.2" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reflash button - shown when previous image exists -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/reflashButton"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_darkest"
                android:text="@string/reflash_cta_text"
                android:visibility="gone"
                app:icon="@android:drawable/ic_popup_sync"
                app:iconTint="@color/blue_dark"
                app:iconGravity="start"
                android:textSize="16sp" />

            <!-- Ticket details card - shown when ticket data is available -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ticketDetailsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/ticketJourneySummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:text="London → Manchester" />

                    <TextView
                        android:id="@+id/ticketDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:text="2024-01-15 14:30" />

                    <TextView
                        android:id="@+id/ticketType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:text="Advance Single • Standard" />

                    <TextView
                        android:id="@+id/ticketReference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:alpha="0.7"
                        android:text="Ref: ABC123456789" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Preview of last flashed image -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reflashPreviewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/reflashButtonImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image_preview_content_description"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Primary action button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cta_extract_qr"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_darkest"
                android:text="@string/cta_extract_qr_text"
                app:icon="@android:drawable/ic_menu_search"
                app:iconTint="@color/blue_dark"
                app:iconGravity="start"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
