<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Material 3 Light (forced) -->
    <style name="Theme.NFCEInkWriter" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_light</item>
        <item name="colorOnPrimaryContainer">@color/blue_darkest</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tan_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/tan_light</item>
        <item name="colorOnSecondaryContainer">@color/tan_darkest</item>
        
        <!-- Force light blue background - override all background attributes -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceContainerLowest">@color/blue_dark</item>
        <item name="colorSurfaceContainer">@color/blue_dark</item>
        <item name="colorSurfaceContainerLow">@color/blue_dark</item>
        <item name="colorSurfaceContainerHigh">@color/blue_dark</item>
        <item name="colorSurfaceContainerHighest">@color/blue_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/blue_dark</item>
        <item name="android:windowBackground">@color/blue_dark</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_dark</item>
        
        <!-- Force light mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        
        <!-- Material 3 shape theme -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>
    
    <!-- Toolbar Theme - ensures white icons and proper menu colors -->
    <style name="ToolbarTheme" parent="ThemeOverlay.Material3.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>
    
    <!-- Popup Menu Theme - ensures proper contrast in dropdown -->
    <style name="PopupMenuTheme" parent="ThemeOverlay.Material3.Light">
        <item name="android:textColorPrimary">@color/blue_darkest</item>
        <item name="android:textColorSecondary">@color/blue_darkest</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    
    <!-- Spinner Theme - ensures white background for dropdown -->
    <style name="SpinnerTheme" parent="ThemeOverlay.Material3.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/blue_darkest</item>
        <item name="colorSurface">@color/white</item>
    </style>
</resources>